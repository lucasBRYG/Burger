<div class = "card text-center">
    <div class = "jumbotron jumotron-fluid m-3">
        <img src="/assets/img/eat-da-burger.jpg" alt="Horrified Burger">
        <h1>Eat-da-Burger!</h1>
    </div>
</div>

<div class = "container">
    <div class = "row">
        <div class = "col s5 m-3">
            <ul class = "list-group">
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burger/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class = "col s5 m-3">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burger/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    
    <div class = "row m3">
        <div class = "content-center">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="name">
                </div>

                <button class = "btn" type="submit">Add Burger</button>
            </form>
        </div>
    </div>

</div>